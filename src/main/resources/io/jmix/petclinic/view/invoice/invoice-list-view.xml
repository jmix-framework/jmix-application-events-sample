<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://invoiceListView.title"
      focusComponent="invoicesDataGrid">
    <data>
        <collection id="invoicesDc"
                    class="io.jmix.petclinic.entity.invoice.Invoice">
            <fetchPlan extends="_base">
                <property name="visit" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="invoicesDl" readOnly="true">
                <query>
                    <![CDATA[select e from petclinic_Invoice e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="invoicesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="invoicesDataGrid.create"/>
            <button id="editButton" action="invoicesDataGrid.edit"/>
            <button id="removeButton" action="invoicesDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="invoicesDl"/>
        </hbox>
        <dataGrid id="invoicesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="invoicesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="invoiceNumber"/>
                <column property="invoiceDate"/>
                <column property="visit"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
